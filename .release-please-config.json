{
    "packages": {
        "core": {
            "release-type": "rust",
            "package-name": "chunkr-core",
            "changelog-path": "CHANGELOG.md"
        },
        "clients/python-client": {
            "release-type": "python",
            "package-name": "chunkr-ai"
        },
        "services": {
            "release-type": "python",
            "package-name": "chunkr-services"
        },
        "apps/web": {
            "release-type": "node",
            "package-name": "chunkr-web"
        },
        "kube/charts/chunkr": {
            "release-type": "helm",
            "package-name": "chunkr-chart"
        },
        ".": {
            "release-type": "simple",
            "changelog-path": "CHANGELOG.md",
            "include-component-in-tag": false,
            "extra-files": [
                {
                    "type": "regex",
                    "path": "compose.yaml",
                    "pattern": "(image: .+:)([^\\s]+)",
                    "replace": "$1{{version}}"
                },
                {
                    "type": "regex",
                    "path": "compose-cpu.yaml",
                    "pattern": "(image: .+:)([^\\s]+)",
                    "replace": "$1{{version}}"
                },
                {
                    "type": "yaml",
                    "path": "kube/charts/chunkr/values.yaml",
                    "jsonpath": "$.services.*.image.tag"
                }
            ]
        }
    },
    "plugins": [
        "sentence-case"
    ],
    "bump-minor-pre-major": true,
    "bump-patch-for-minor-pre-major": true
}